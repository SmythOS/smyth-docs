    }

    :root[data-theme='dark'] .copy-btn {
      color: #cbd5e1;
    }

    :root[data-theme='dark'] .copy-btn:hover {
      color: #f1f5f9;
    }
  `}
</style>
  </div>
  );
};

export default PromptCard;
